// TODO: Items have a special way to apply customizations/overrides, especially for packs/bundles.
// When an item is parsed, if it has a string at the first value which is a source id, that item is cloned and the deserialized bits in this entry are overlaid on top of it. That means that the contents of the container, the name, and the worth are all overrides on top of the backpack itself.
//!burglarPack
item "items/gear/backpack.kdl" name="Burglar's Pack" {
	worth 16 (Currency)"Gold"
	items {
		templates {
			item "Specific" "items/gear/ballBearings.kdl" count=1000
			item "Custom" name="String (ft.)" {
				kind "Simple" count=10
			}
			item "Specific" "items/gear/bell.kdl"
			item "Specific" "items/gear/candle.kdl" count=5
			item "Specific" "items/gear/crowbar.kdl"
			item "Specific" "items/gear/hammer.kdl"
			item "Specific" "items/gear/piton.kdl" count=10
			item "Specific" "items/gear/lanternHooded.kdl"
			item "Specific" "items/gear/oilFlask.kdl" count=2
			item "Specific" "items/gear/ration.kdl" count=5
			item "Specific" "items/gear/tinderbox.kdl"
			item "Specific" "items/gear/waterskin.kdl"
			item "Specific" "items/gear/ropeHempen.kdl" count=50
		}
	}
}
