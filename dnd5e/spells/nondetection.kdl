spell name="Nondetection" {
	tag "Abjuration"
	tag "Bard"
	tag "Ranger"
	tag "Wizard"
	rank 3
	casting-time "Action"
	range "Touch"
	component "Verbal"
	component "Somatic"
	component "Material" "a pinch of diamond dust worth 25 gp sprinkled over the target" consumes=true
	duration "Hour" 8
